<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fixyourcar.fixyourcar">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.Black" > <!-- Definindo o tema -->

            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FormularioActivity"
            android:theme="@android:style/Theme.Black" > <!-- Definindo o tema -->

            <intent-filter>
                <action
                    android:name="com.fixyourcar.fixyourcar.ACAO_CARREGAR" />
                <category
                    android:name="com.fixyourcar.fixyourcar.CATEGORIA_FORMULARIO" />
                <category
                    android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CarroActivity"
            android:theme="@android:style/Theme.Black" > <!-- Definindo o tema -->

            <intent-filter>
                <action
                    android:name="com.fixyourcar.fixyourcar.ACAO_CARRO" />
                <category
                    android:name="com.fixyourcar.fixyourcar.CATEGORIA_CARRO" />
                <category
                    android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
